<header class="bg-white shadow-sm sticky top-0 z-50">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <a
        href="/"
        class="text-2xl font-bold text-indigo-600 flex items-center gap-2"
      >
        <i class="fa-solid fa-layer-group text-3xl"></i>
        Leviro Utils
      </a>

      <!-- Desktop Menu -->
      <div class="hidden md:flex items-center gap-8">
        <a
          href="/services/age-calculator"
          class="text-gray-600 hover:text-indigo-600 font-medium transition-colors"
          >Age Calculator</a
        >
        <a
          href="/services/currency-converter"
          class="text-gray-600 hover:text-indigo-600 font-medium transition-colors"
          >Currency Converter</a
        >
        <a
          href="/services/secret-generator"
          class="text-gray-600 hover:text-indigo-600 font-medium transition-colors"
          >Secret Generator</a
        >
        <a
          href="/services/world-info"
          class="text-gray-600 hover:text-indigo-600 font-medium transition-colors"
          >World Info</a
        >
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 rounded-lg text-gray-600 hover:bg-gray-100 transition-colors focus:outline-none"
      >
        <i class="fa-solid fa-bars text-2xl"></i>
      </button>
    </div>
  </nav>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="md:hidden fixed inset-0 z-40 bg-white transform translate-x-full transition-transform duration-300 ease-in-out"
    style="top: 73px"
  >
    <div class="flex flex-col p-6 space-y-4 border-t border-gray-100">
      <a
        href="/services/age-calculator"
        class="flex items-center gap-3 p-3 rounded-xl hover:bg-gray-50 text-gray-700 font-medium transition-colors"
      >
        <div
          class="w-10 h-10 rounded-lg bg-blue-100 text-blue-600 flex items-center justify-center"
        >
          <i class="fa-solid fa-cake-candles"></i>
        </div>
        Age Calculator
      </a>
      <a
        href="/services/currency-converter"
        class="flex items-center gap-3 p-3 rounded-xl hover:bg-gray-50 text-gray-700 font-medium transition-colors"
      >
        <div
          class="w-10 h-10 rounded-lg bg-green-100 text-green-600 flex items-center justify-center"
        >
          <i class="fa-solid fa-money-bill-transfer"></i>
        </div>
        Currency Converter
      </a>
      <a
        href="/services/secret-generator"
        class="flex items-center gap-3 p-3 rounded-xl hover:bg-gray-50 text-gray-700 font-medium transition-colors"
      >
        <div
          class="w-10 h-10 rounded-lg bg-purple-100 text-purple-600 flex items-center justify-center"
        >
          <i class="fa-solid fa-user-secret"></i>
        </div>
        Secret Generator
      </a>
      <a
        href="/services/world-info"
        class="flex items-center gap-3 p-3 rounded-xl hover:bg-gray-50 text-gray-700 font-medium transition-colors"
      >
        <div
          class="w-10 h-10 rounded-lg bg-indigo-100 text-indigo-600 flex items-center justify-center"
        >
          <i class="fa-solid fa-earth-americas"></i>
        </div>
        World Info
      </a>
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById("mobile-menu-btn");
  const menu = document.getElementById("mobile-menu");
  const icon = btn.querySelector("i");
  let isOpen = false;

  btn.addEventListener("click", () => {
    isOpen = !isOpen;
    if (isOpen) {
      menu.classList.remove("translate-x-full");
      icon.classList.remove("fa-bars");
      icon.classList.add("fa-xmark");
      document.body.style.overflow = "hidden";
    } else {
      menu.classList.add("translate-x-full");
      icon.classList.remove("fa-xmark");
      icon.classList.add("fa-bars");
      document.body.style.overflow = "";
    }
  });
</script>
