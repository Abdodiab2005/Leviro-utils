<div class="max-w-4xl mx-auto">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">PWA Asset Generator</h1>

  <div class="bg-white rounded-lg shadow-md p-6">
    <form id="pwaForm" class="space-y-6">
      <!-- Logo Upload -->
      <div>
        <label class="block text-gray-700 text-sm font-bold mb-2" for="logo">
          App Logo (High Res, e.g., 512x512)
        </label>
        <input
          type="file"
          id="logo"
          accept="image/*"
          required
          class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100"
        />
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- App Name -->
        <div>
          <label
            class="block text-gray-700 text-sm font-bold mb-2"
            for="appName"
          >
            App Name
          </label>
          <input
            type="text"
            id="appName"
            required
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            placeholder="My Awesome PWA"
          />
        </div>

        <!-- Short Name -->
        <div>
          <label
            class="block text-gray-700 text-sm font-bold mb-2"
            for="shortName"
          >
            Short Name
          </label>
          <input
            type="text"
            id="shortName"
            required
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            placeholder="MyPWA"
          />
        </div>
      </div>

      <!-- Description -->
      <div>
        <label
          class="block text-gray-700 text-sm font-bold mb-2"
          for="description"
        >
          Description
        </label>
        <textarea
          id="description"
          rows="3"
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          placeholder="A brief description of your app"
        ></textarea>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Theme Color -->
        <div>
          <label
            class="block text-gray-700 text-sm font-bold mb-2"
            for="themeColor"
          >
            Theme Color
          </label>
          <div class="flex items-center">
            <input
              type="color"
              id="themeColor"
              value="#4f46e5"
              class="h-10 w-10 border-none p-0 rounded cursor-pointer"
            />
            <input
              type="text"
              id="themeColorText"
              value="#4f46e5"
              class="ml-2 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            />
          </div>
        </div>

        <!-- Background Color -->
        <div>
          <label
            class="block text-gray-700 text-sm font-bold mb-2"
            for="backgroundColor"
          >
            Background Color
          </label>
          <div class="flex items-center">
            <input
              type="color"
              id="backgroundColor"
              value="#ffffff"
              class="h-10 w-10 border-none p-0 rounded cursor-pointer"
            />
            <input
              type="text"
              id="backgroundColorText"
              value="#ffffff"
              class="ml-2 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            />
          </div>
        </div>
      </div>

      <div class="flex items-center justify-between pt-4">
        <button
          id="generateBtn"
          type="submit"
          class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-300"
        >
          Generate Assets
        </button>
        <a
          id="downloadBtn"
          href="#"
          class="hidden bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-300"
        >
          Download Zip
        </a>
      </div>

      <div id="loading" class="hidden text-center text-gray-600 mt-2">
        <i class="fas fa-spinner fa-spin mr-2"></i> Generating assets...
      </div>
    </form>
  </div>
</div>

<script>
  const form = document.getElementById("pwaForm");
  const generateBtn = document.getElementById("generateBtn");
  const downloadBtn = document.getElementById("downloadBtn");
  const loading = document.getElementById("loading");

  // Sync color inputs
  ["themeColor", "backgroundColor"].forEach((id) => {
    const colorInput = document.getElementById(id);
    const textInput = document.getElementById(id + "Text");

    colorInput.addEventListener(
      "input",
      (e) => (textInput.value = e.target.value)
    );
    textInput.addEventListener(
      "input",
      (e) => (colorInput.value = e.target.value)
    );
  });

  form.addEventListener("submit", async (e) => {
    e.preventDefault();

    const formData = new FormData();
    formData.append("logo", document.getElementById("logo").files[0]);
    formData.append("appName", document.getElementById("appName").value);
    formData.append("shortName", document.getElementById("shortName").value);
    formData.append(
      "description",
      document.getElementById("description").value
    );
    formData.append("themeColor", document.getElementById("themeColor").value);
    formData.append(
      "backgroundColor",
      document.getElementById("backgroundColor").value
    );

    generateBtn.disabled = true;
    generateBtn.classList.add("opacity-50", "cursor-not-allowed");
    loading.classList.remove("hidden");
    downloadBtn.classList.add("hidden");

    try {
      const response = await fetch("/api/pwa/generate", {
        method: "POST",
        body: formData,
      });

      const result = await response.json();

      if (response.ok) {
        downloadBtn.href = result.downloadUrl;
        downloadBtn.classList.remove("hidden");
        // Auto click download
        downloadBtn.click();
      } else {
        alert(result.error || "An error occurred.");
      }
    } catch (error) {
      console.error("Error:", error);
      alert("An error occurred while processing the request.");
    } finally {
      generateBtn.disabled = false;
      generateBtn.classList.remove("opacity-50", "cursor-not-allowed");
      loading.classList.add("hidden");
    }
  });
</script>
