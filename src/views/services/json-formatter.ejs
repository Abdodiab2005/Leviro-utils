<div class="max-w-6xl mx-auto">
  <div class="bg-white rounded-2xl shadow-xl p-8">
    <div class="text-center mb-8">
      <div
        class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-yellow-100 mb-4"
      >
        <svg
          class="w-8 h-8 text-yellow-600"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
          ></path>
        </svg>
      </div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        JSON Formatter
      </h1>
      <p class="text-gray-600">
        Validate, format, and minify your JSON data
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 h-[600px]">
      <!-- Input -->
      <div class="flex flex-col">
        <div class="flex justify-between items-center mb-2">
          <label class="font-medium text-gray-700"
            >Input JSON</label
          >
          <div class="space-x-2">
            <button
              onclick="clearInput()"
              class="text-sm text-red-600 hover:text-red-700"
            >
              Clear
            </button>
            <button
              onclick="pasteInput()"
              class="text-sm text-blue-600 hover:text-blue-700"
            >
              Paste
            </button>
          </div>
        </div>
        <textarea
          id="jsonInput"
          class="flex-1 w-full p-4 font-mono text-sm bg-gray-50 border border-gray-300 rounded-xl focus:ring-2 focus:ring-yellow-500 focus:border-transparent resize-none"
          placeholder="Paste your JSON here..."
        ></textarea>
      </div>

      <!-- Output -->
      <div class="flex flex-col">
        <div class="flex justify-between items-center mb-2">
          <label class="font-medium text-gray-700"
            >Formatted Output</label
          >
          <div class="space-x-2">
            <button
              onclick="copyOutput()"
              class="text-sm text-blue-600 hover:text-blue-700"
            >
              Copy
            </button>
          </div>
        </div>
        <textarea
          id="jsonOutput"
          readonly
          class="flex-1 w-full p-4 font-mono text-sm bg-gray-50 border border-gray-300 rounded-xl focus:ring-2 focus:ring-yellow-500 focus:border-transparent resize-none"
        ></textarea>
      </div>
    </div>

    <!-- Controls -->
    <div class="flex flex-col md:flex-row gap-2 justify-center space-x-4 mt-6">
      <button
        onclick="formatJson(2)"
        class="px-6 py-2 bg-yellow-500 hover:bg-yellow-600 text-white font-bold rounded-lg shadow transition-colors"
      >
        Format (2 spaces)
      </button>
      <button
        onclick="formatJson(4)"
        class="px-6 py-2 bg-yellow-500 hover:bg-yellow-600 text-white font-bold rounded-lg shadow transition-colors"
      >
        Format (4 spaces)
      </button>
      <button
        onclick="minifyJson()"
        class="px-6 py-2 bg-gray-600 hover:bg-gray-700 text-white font-bold rounded-lg shadow transition-colors"
      >
        Minify
      </button>
    </div>
  </div>
</div>

<script>
  const input = document.getElementById("jsonInput");
  const output = document.getElementById("jsonOutput");

  function formatJson(spaces) {
    try {
      const val = input.value.trim();
      if (!val) return;
      const parsed = JSON.parse(val);
      output.value = JSON.stringify(parsed, null, spaces);
      output.classList.remove("border-red-500");
    } catch (e) {
      output.value = "Invalid JSON: " + e.message;
      output.classList.add("border-red-500");
    }
  }

  function minifyJson() {
    try {
      const val = input.value.trim();
      if (!val) return;
      const parsed = JSON.parse(val);
      output.value = JSON.stringify(parsed);
      output.classList.remove("border-red-500");
    } catch (e) {
      output.value = "Invalid JSON: " + e.message;
      output.classList.add("border-red-500");
    }
  }

  function clearInput() {
    input.value = "";
    output.value = "";
  }

  async function pasteInput() {
    try {
      const text = await navigator.clipboard.readText();
      input.value = text;
    } catch (err) {
      console.error("Failed to read clipboard", err);
    }
  }

  function copyOutput() {
    output.select();
    document.execCommand("copy");
  }
</script>
